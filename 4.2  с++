#include <iostream>
#include <cmath>

int main() {
    float x, y;

    // Ввод значения x
    std::cout << "Введите значение x: ";
    std::cin >> x;

    // Вычисление значения y
    if (x > 0) {
        y = pow(sin(x), 2);
    } else {
        y = 1 - 2 * pow(sin(x), 2);
    }

    std::cout << "Значение y: " << y << std::endl;

    return 0;
}
